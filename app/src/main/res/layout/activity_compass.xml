<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center">

            <!--<TextView-->
            <!--android:text="Ponga el dispositivo horizontalmente en parallelo al suelo, y en la posicion que corresponde al sketch del levantamiento."-->
            <!--android:textColor="#404040"-->
            <!--android:textSize="18dp"-->
            <!--android:layout_width="250dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:textAlignment="center"-->
            <!--android:layout_gravity="right|center"/>-->

            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="-100dp"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/compassfondo2"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/compassaguja"
                    android:id="@+id/brujula2"/>

            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:layout_marginTop="-10dp"
                android:layout_marginLeft="-60dp">

                <RelativeLayout
                    android:layout_height="130dp"
                    android:layout_width="400dp"
                    android:layout_gravity="center">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="centerInside"
                        android:src="@drawable/fondogps"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="40dp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="center"
                        android:src="@drawable/compasarrow"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="-15dp"/>

                    <TextView
                        android:text="0"
                        android:textColor="#818181"
                        android:textSize="34dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/TxtDegrees"
                        android:textAlignment="center"
                        android:layout_marginTop="55dp"
                        android:layout_centerHorizontal="true"/>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_height="110dp"
                    android:layout_width="400dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="-10dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="fitCenter"
                        android:src="@drawable/fondogps"
                        android:layout_centerHorizontal="true"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/gpsicon"
                            android:layout_marginTop="15dp"/>

                        <TextView
                            android:text="0"
                            android:textColor="#818181"
                            android:textSize="25dp"
                            android:layout_width="280dp"
                            android:maxWidth="280dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/TxtLatitud"
                            android:textAlignment="center"
                            android:layout_marginTop="28dp"
                            android:layout_marginLeft="-10dp"/>

                    </LinearLayout>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_height="110dp"
                    android:layout_width="400dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="-10dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="fitCenter"
                        android:src="@drawable/fondogps"
                        android:layout_centerHorizontal="true"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/gpsicon"
                            android:layout_marginTop="15dp"/>

                        <TextView
                            android:text="0"
                            android:textColor="#818181"
                            android:textSize="25dp"
                            android:layout_width="280dp"
                            android:maxWidth="280dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/TxtLongitud"
                            android:textAlignment="center"
                            android:layout_marginTop="28dp"
                            android:layout_marginLeft="-10dp"/>
                    </LinearLayout>

                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

</RelativeLayout>
