<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ipat.johanbayona.gca.ipat.NewEvidence.AddVehiclePage1_Fragment">

    <RelativeLayout
        android:layout_width="275dp"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <LinearLayout android:layout_width="270dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="left"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rounded_border">

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="left"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true">

                    <TextView android:id="@+id/TxtCategory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Titulo"
                        android:textColor="#182b4b"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:textSize="18dp"
                        android:textAllCaps="false" />

                <View android:layout_height="1dp"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:background="#15182b4b"/>

            </LinearLayout>

            <GridView
                android:id="@+id/GrdCategory"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:columnWidth="120dp"
                android:numColumns="auto_fit"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:verticalSpacing="10dp"
                android:horizontalSpacing="10dp"
                android:stretchMode="columnWidth"
                android:listSelector="@drawable/selectorevidence">
            </GridView>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp">

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="left"
            android:background="@drawable/rounded_border2">

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="left"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true">

                <TextView android:id="@+id/TxtSubCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Titulo"
                    android:textColor="#8fb5e3"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:textSize="18dp"/>

                <View android:layout_height="1dp"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:background="#158fb5e3"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/RlyDocumentId"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="60dp">

                    <ImageView
                        android:id="@+id/ImgSelectedPerson"
                        android:layout_width="60dp"
                        android:layout_height="60dp"/>

                    <EditText
                        android:id="@+id/EdtDocumentId"
                        android:inputType="number"
                        android:layout_width="400dp"
                        android:layout_marginLeft="80dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:textAlignment="center"
                        android:textColor="#4f4f4f"
                        android:textSize="30dp"
                        android:hint="Documento Id"/>

                </RelativeLayout>

                <GridView
                    android:id="@+id/GrdSubCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:columnWidth="120dp"
                    android:numColumns="auto_fit"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:verticalSpacing="10dp"
                    android:horizontalSpacing="10dp"
                    android:stretchMode="columnWidth"
                    android:layout_gravity="center"
                    android:listSelector="@drawable/selectorevidence2">
                </GridView>

            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>

    <ImageView
        android:id="@+id/ImgMenuRow"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="235dp"
        android:src="@drawable/triangulo"
        android:layout_gravity="center"
        android:visibility="gone"/>
</LinearLayout>